<div class="flex flex-col h-screen my-auto items-center bgimg bg-cover my-8">
  <% @accounts.each do |user| %>
    <div class="flex justify-center">
      <div class="rounded-lg shadow-lg bg-white max-w-lg border-2 my-4 flex flex-wrap justify-center">
        <div class="w-6/12 sm:w-4/12 px-4">
          <img class="rounded-t-lg" src="<%= user.image.url %>" alt=""/>
        </div>
        <div class="p-6">
          <h5 class="text-gray-900 text-xl font-medium mb-2">
            <%= link_to user.username, profile_path(user.username) %>
          </h5>
          <p class="text-gray-700 text-base mb-4"><%= user.description.truncate(27, separator: ' ') %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>